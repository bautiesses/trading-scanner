# Database (Railway: add PostgreSQL plugin, it sets DATABASE_URL automatically)
# For Railway: postgresql+asyncpg://... (change postgres:// to postgresql+asyncpg://)
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/database

# Security (generate a strong random key for production)
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Anthropic (optional)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Binance (optional for public endpoints)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Scanner
SCAN_INTERVAL_MINUTES=5

# Solana / Helius (https://helius.dev - free tier)
HELIUS_API_KEY=your-helius-api-key
HELIUS_WEBHOOK_SECRET=

# Frontend URL (Railway: set to your frontend URL for CORS)
FRONTEND_URL=https://your-frontend.up.railway.app

# App URL (Railway: set to your backend URL for webhooks)
APP_BASE_URL=https://your-backend.up.railway.app
